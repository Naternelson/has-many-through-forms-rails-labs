<%= form_for @post do |f|%>
    <%=f.label :title %>
    <%= f.text_field :title%>
    <br>
    <%=f.label :content %>
    <%= f.text_field :content%>
    <%=f.label :category, "Select a Category" %>
    <%= f.collection_check_boxes :category_ids, Category.order(:name), :id, :name %>
    <br> or Create a New Category <br>
    <%=f.fields_for :categories, @post.categories.build do |c|%>
        <%=c.label :name%>
        <%=c.text_field :name%>
    <% end %>
    <br>
    <%= f.submit%>
<% end %>
