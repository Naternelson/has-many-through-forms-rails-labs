<h1><%= @post.title.titlecase %></h1>
<div id="post_content">
    <p><%=@post.content%></p>
</div>
<h2></h2>
<% @post.categories.each do |c|%>
    <%= c.name%>
    <br>
<% end %>
<h2>Comment Section</h2>
<div id="post_comments">
    <% @post.comments.each do |c| %>
        <p><%= c.user.username %> says: <%= c.content %></p>
    <% end %>
</div>
<h3>Users who have commented on this post: </h3>
<ul>
    <% if !@post.users.empty?%>
        <%= @post.users.uniq.each  do |u| %>
            <li><%= link_to u.username, user_path(u) %> </li>
        <% end %>
    <%end %>
</ul>

<div id="post_comment_form">
    <%= form_for @post.comments.build do |c| %>
        <%= c.hidden_field :post_id%>
        <%= c.label :content, "Comment:"%>
        <%= c.text_field :content %>
        <br>
        <%= c.label :user_id, "Users" %>
        <%= c.collection_select :user_id, User.all, :id, :username, include_blank: "Choose a User" %>
        <br>
        <%= c.fields_for :user, @post.comments.last.build_user do |u|%>
            <%= u.label :username %>
            <%= u.text_field :username %>
            <br>
            <%= u.label :email %>
            <%= u.text_field :email %>
        <% end %>
        <br>
        <br>
        <%= c.submit "Create Comment" %>
    <% end %>
</div>




